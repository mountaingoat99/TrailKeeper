<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_inner_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/subscription_trails"
        style="@style/TextViewLarge"
        android:textColor="@color/secondary_text"
        android:text="Silver Lake Trails"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <Button
            android:id="@+id/btn_trail_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/button_home"
            android:textSize="@dimen/text_size_mini"
            android:textColor="@color/accent"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btn_unsubscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_toEndOf="@+id/btn_trail_home"
            android:layout_toRightOf="@+id/btn_trail_home"
            android:text="@string/unsubscribe"
            android:textSize="@dimen/text_size_mini"
            android:textColor="@color/accent"
            style="?android:attr/borderlessButtonStyle"/>

    </RelativeLayout>

</LinearLayout>